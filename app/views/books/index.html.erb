<div class="row">
<div class="col-3">
<h1>User info</h1>
  
  <p><%= image_tag @user.get_image(100,100) %></p>
<table class="table">
  <tr>
    <th>
      name 
    </th>
    <th>
      <%= @user.name %>
    </tr>
  <tr>
    <th>
      introduction
    </th>
    <th>
      <%= @user.introduction %>
    </th>
  </tr>
</table>

<div class="row">
  <%= link_to "<i class='fa-solid fa-user-gear'></i>".html_safe, edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %>
</div>
  
<p></p>
  <h1>New book</h1>
<%= form_with model: @book do |f| %>

<p></p>
<div class="form">
<%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<p></p>
<div class="form">
<%= f.label :Opinion %>
  <%= f.text_area :body, class: "form-control" %>
</div>

<p></p>
<div class="form">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<% end %>
</div>

<div class="col-8 offset-1">
<h1>Books</h1>

<table class="table table-hover ">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_image(100,100) %><% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %><%= book.title %><% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
</table>

</div>
</div>