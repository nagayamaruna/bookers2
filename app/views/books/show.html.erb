<h1>Book detail</h1>

<%= link_to book_path(@book.id) do %><%= image_tag @user.image %><br><%= @book.user.name %><% end %>


<p><%= link_to @book.title, book_path(@book.id) %></p>


<p><%= @book.body %></p>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id), method: :delete %>
<% end %>