<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/e9c35b0b7a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container-fluid">
          <%= link_to 'Bookers', "/", class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        
    <% if user_signed_in? %>
        
      <li class="nav-item">
      <%= link_to user_path(current_user), class: 'nav-link text-light active', 'aria-current': 'page' do %>
      <i class="fa-solid fa-house"></i> Home
      <% end %>
      </li>
      
      <li class="nav-item">
      <%= link_to "/users", class: 'nav-link text-light active', 'aria-current': 'page' do %>
      <i class="fa-solid fa-users"></i> Users
      <% end %>
      </li>
      
      <li class="nav-item">
      <%= link_to "/books", class: 'nav-link text-light active', 'aria-current': 'page' do %>
      <i class="fa-solid fa-book-open"></i> Books
      <% end %>
      </li>
      
      <li class="nav-item">
      <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light active', 'aria-current': 'page' do %>
      <i class="fa-solid fa-right-from-bracket"></i> Log out
      <% end %>
      </li>
      
    <% else %>
      <ul class="navbar-nav ml-auto">

      <li class="nav-item">
      <%= link_to raw('<i class="fa-solid fa-house"></i> Home'), root_path, class: "nav-link text-light active", aria: { current: "page" } %>
      </li>

      <li class="nav-item">
      <%= link_to raw('<i class="fa-solid fa-link"></i> About'), "/home/about", class: "nav-link text-light active", aria: { current: "page" } %>
      </li>

      <li class="nav-item">
      <%= link_to raw('<i class="fa-solid fa-user-plus"></i> Sign up'), new_user_registration_path, class: "nav-link text-light active", aria: { current: "page" } %>
      </li>

      <li class="nav-item">
      <%= link_to raw('<i class="fa-solid fa-right-to-bracket"></i> Log in'), new_user_session_path, class: "nav-link text-light active", aria: { current: "page" } %>
      </li>
      </ul>
    
    <% end %>  
      </ul>
    </div>
  </div>
</nav>
    </header>
    
    <main>
      <div class="container px-sm-0">
        <div class="row">
          <%= notice %>
          <%= alert %>
        </div>
      </div>
      <div class="container px-sm-0">
          <%= yield %>
      </div>
    </main>
    
    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto mt-5">
            CopyRight Infratop.inc
          </div>
        </div>
      </div>
    </footer>
    
    
  </body>
</html>
