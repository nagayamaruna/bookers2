<div class="row">
<div class="col-lg-5 mx-auto">
<h1>User info</h1>
<%= form_with model: @user, method: :patch do |f| %>
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="form" style="margin-bottom: 20px;">
<%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>


<div class="form" style="margin-bottom: 20px;">
<%= f.label :image %> <br>
  <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
</div>


<div class="form" style="margin-bottom: 20px;">
<%= f.label :introduction %> 
  <%= f.text_area :introduction, class: "form-control"%>
</div>


<div class="form" style="margin-bottom: 20px;">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
</div>
<% end %>

