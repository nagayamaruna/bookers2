<div class="row">
<div class="col-sm-12 col-md-10 col-lg-6 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<%= form_with model: @user, method: :patch do |f| %>
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="form-group">
<div class="form" style="margin-bottom: 20px;">
<%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>


<div class="form" style="margin-bottom: 20px;">
<%= f.label :profile_image %> <br>
  <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
</div>


<div class="form" style="margin-bottom: 20px;">
<%= f.label :introduction %> 
  <%= f.text_area :introduction, class: "form-control"%>
</div>


<div class="form" style="margin-bottom: 20px;">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
</div>

<% end %>
</div>

